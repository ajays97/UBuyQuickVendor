<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:text="Bhyrava Provisions"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_products"
                android:layout_below="@id/tv_shop_name"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="14sp"
                android:text="[Grocery, Provisions, Livestock]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RatingBar
                android:id="@+id/rb_shop_rating"
                android:rating="3"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:layout_below="@id/tv_products"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_shop_address"
                android:textAlignment="center"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/rb_shop_rating"
                android:text="#191, Cambridge layout, Sai Baba Temple road, Halasuru, Someshwarapura layout, Jogupaiya, Bangalore - 560091"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_shop_timings"
                android:layout_marginTop="18dp"
                android:text="7:30 AM - 10:00 PM"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:layout_marginStart="10dp"
                android:text="Online"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:checked="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_shop_timings"
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>