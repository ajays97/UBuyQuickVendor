<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Shop Registration"
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView9"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Shop Name:"
                android:textColor="@color/colorTextPrimary" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputLayout4"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_shop_address"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Address:"
                android:minLines="2" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputLayout5"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/et_shop_pincode"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Pincode:" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textInputLayout7"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Tell us your shop timings:"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_from"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/textView10"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/textView11"
            android:background="@color/colorAccent"
            android:text="FROM"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_to"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/textView10"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/textView11"
            android:background="@color/colorAccent"
            android:text="TO  "
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView10"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:text="--" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_from"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Choose the categories the shop sells:"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView12"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Groceries" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_toEndOf="@id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView12"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Vegetables" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Livestock" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_toEndOf="@id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="Provisions" />

        <Button
            android:id="@+id/btn_location"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:text="@string/set_location_radius"
            android:background="@color/colorAccent"
            android:layout_below="@id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/tv_delivery_radius"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:text="Delivery Radius:"
            android:layout_below="@id/btn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_add_shop"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/white"
            android:text="Add Shop"
            android:textSize="24sp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccent"
            android:layout_below="@id/tv_delivery_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</merge>